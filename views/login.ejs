<% include partials/header %>

<div class="container credentials-container">
    
    <div class="form-contain credentials">
        <form action="/login" method="POST">
            <h2 class="credentials-title">Login</h2>
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="Username" autofocus="autofocus"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Password"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Login</button>
            </div>
        </form>
        <a href="/" class="back">Go Back</a>
    </div>
    
</div>

<% include partials/footer %>